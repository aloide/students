<style>
    .form-center {
        display: flex;
        flex-direction: column;

    }

    .form-center * {
        width: 100%;
        margin: 1px auto;
    }
</style>


<form action="/signup" method="post" class="form-center">
    <div class="">
        <label for="documento">Número de documento</label>
        <br>
        <input type="number" name="documento" id="documento" required placeholder="Sin puntos y sin espacio">
    </div>
    <div class="">
        <label for="name">Nombres</label>
        <br>
        <input type="text" name="name" id="name" required>
    </div>
    <div class="">
        <label for="lastname">Apellidos</label>
        <br>
        <input type="text" name="lastname" id="lastname" required>
    </div>
    <div class="">
        <select name="tipo" id="tipo" disabled>
            <option value="e">Estudiante</option>
            <option value="d">Docente</option>
        </select>
    </div>
    <div class="">
        <label for="paswd">Password</label>
        <br>
        <input type="password" name="paswd" id="paswd" required placeholder="4 Caracteres mínimo">
    </div>
    <div class="">
        <input type="submit" value="Crear usuario">
    </div>
</form>